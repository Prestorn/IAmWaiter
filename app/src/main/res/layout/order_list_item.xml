<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/listItemBackground"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_rectangle_rounded_blue"/>

        <ImageView
            android:id="@+id/imagePersonCount"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toStartOf="@+id/imageTableNuber"
            app:layout_constraintStart_toStartOf="@+id/listItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person_3" />

        <TextView
            android:id="@+id/textViewPersonCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:text="@string/list_item_base_int"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/imagePersonCount"
            app:layout_constraintStart_toStartOf="@+id/imagePersonCount"
            app:layout_constraintTop_toBottomOf="@+id/imagePersonCount" />

        <ImageView
            android:id="@+id/imageTableNuber"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toStartOf="@+id/imageCost"
            app:layout_constraintStart_toEndOf="@+id/imagePersonCount"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_table" />

        <TextView
            android:id="@+id/textViewTableNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:text="@string/list_item_base_int"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/imageTableNuber"
            app:layout_constraintEnd_toEndOf="@+id/imageTableNuber"
            app:layout_constraintTop_toBottomOf="@+id/imageTableNuber" />

        <ImageView
            android:id="@+id/imageCost"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="@+id/listItemBackground"
            app:layout_constraintStart_toEndOf="@+id/imageTableNuber"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cash" />

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:text="@string/list_item_base_int"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/imageCost"
            app:layout_constraintStart_toStartOf="@+id/imageCost"
            app:layout_constraintTop_toBottomOf="@+id/imageCost" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>